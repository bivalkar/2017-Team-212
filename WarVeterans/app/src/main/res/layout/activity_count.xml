<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:background="#616161"
              tools:context="sdplusplus.sdsu.edu.warveterans.MainActivity"
              android:weightSum="1">

    <TextView
        android:text="Veterans"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_weight="0.18"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#8C9EFF"
        android:textAllCaps="true"
        android:layout_below="@+id/button10"
        android:layout_alignParentStart="true"
        android:layout_marginTop="71dp"/>

    <TextView
        android:id="@+id/value_text_view"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#8C9EFF"
        android:textAllCaps="true"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="+"
        android:textSize="50dp"
        android:textColor="#90CAF9"
        android:onClick="increment"
        android:background="#76FF03"
        android:layout_alignBottom="@+id/button8"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/button8"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        android:text="+"
        android:textSize="50dp"
        android:textColor="#90CAF9"
        android:onClick="increment"
        android:background="#76FF03"
        android:id="@+id/button8"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/button12"
        android:layout_alignStart="@+id/button12"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="-"
        android:textSize="56sp"
        android:textColor="#90CAF9"
        android:onClick="decrement"
        android:background="#76FF03"
        android:id="@+id/button12"
        android:layout_marginBottom="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView3"/>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="-"
        android:textSize="56sp"
        android:textColor="#90CAF9"
        android:onClick="decrement"
        android:background="#76FF03"
        android:layout_alignTop="@+id/button12"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:text="Non-Veterans"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_weight="0.18"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/button13"/>

    <Button
        android:layout_width="161dp"
        android:layout_height="53dp"
        android:text="DONE"
        android:onClick="forward"
        android:textSize="30dp"
        android:layout_marginLeft="89dp"
        android:background="#3D5AFE"
        android:layout_weight="0.47"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/value_text_view"/>

</RelativeLayout>